<link rel="stylesheet" href="/css/contacto.css">

<div class="conteiner-contacto">
    <h2 id="contacto">Contacto</h2>
    <div class="card">
        
        <div class="card-body">
            <form action="">
                <p>Envie su correo</p>
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="mensaje">Mensaje:</label>
                    <textarea class="form-control" id="mensaje" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
    <p>Obtenga mi CV aqui:</p>
    <a href="/download/CV.pdf" download="CV Maximiliano Rucci">Download <i class="fa-solid fa-file-arrow-down"></i></a>
</div>

<script>
    ScrollReveal().reveal('.conteiner-contacto .card', {delay:500});
</script>
    